@model IEnumerable<HotelBooking>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Bookings List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Hotel ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Check In Date</th>
            <th>Check Out Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.HBookingId</td>
                <td>@booking.HotelId</td>
                <td>@booking.Guestname</td>
                <td>@booking.GuestEmail</td>
                <td>@booking.CheckInDate</td>
                <td>@booking.CheckOutDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.HBookingId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@booking.HBookingId" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.HBookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a asp-action="Create" asp-route-hotelId="@ViewBag.HotelId" class="btn btn-primary">Create New Booking</a>

<a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary">Back To Hotels</a>
