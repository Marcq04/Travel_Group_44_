@model IEnumerable<CarRentalBooking>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Bookings List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Car Rental ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CBookingId</td>
                <td>@booking.CarRentalId</td>
                <td>@booking.RenterName</td>
                <td>@booking.RenterEmail</td>
                <td>@booking.RentalStartDate</td>
                <td>@booking.RentalEndDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.CBookingId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@booking.CBookingId" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.CBookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a asp-action="Create" asp-route-carRentalId="@ViewBag.CarRentalId" class="btn btn-primary">Create New Booking</a>

<a asp-controller="CarRental" asp-action="Index" class="btn btn-secondary">Back To Car Rentals</a>
